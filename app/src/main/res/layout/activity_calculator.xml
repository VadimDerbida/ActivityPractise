<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context="com.dg.lesson2.Calculator">

    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="40sp"

        />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:ellipsize="end"
        android:gravity="end"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="30sp"


        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/AC_btn"
                style="@style/ActionButton"
                android:text="AC" />

            <TextView
                android:id="@+id/brk1_btn"
                style="@style/ActionButton"
                android:text="(" />

            <TextView
                android:id="@+id/brk2_btn"
                style="@style/ActionButton"
                android:text=")" />

            <TextView
                android:id="@+id/divide_btn"
                style="@style/ActionButton"
                android:text="/" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/seven_btn"
                style="@style/NumberButton"
                android:text="7" />

            <TextView
                android:id="@+id/eight_btn"
                style="@style/NumberButton"
                android:text="8" />

            <TextView
                android:id="@+id/nine_btn"
                style="@style/NumberButton"
                android:text="9" />

            <TextView
                android:id="@+id/mult_btn"
                style="@style/ActionButton"
                android:text="*" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/four_btn"
                style="@style/NumberButton"
                android:text="4" />

            <TextView
                android:id="@+id/five_btn"
                style="@style/NumberButton"
                android:text="5" />

            <TextView
                android:id="@+id/six_btn"
                style="@style/NumberButton"
                android:text="6" />

            <TextView
                android:id="@+id/min_btn"
                style="@style/ActionButton"
                android:text="-" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/one_btn"
                style="@style/NumberButton"
                android:text="1" />

            <TextView
                android:id="@+id/two_btn"
                style="@style/NumberButton"
                android:text="2" />

            <TextView
                android:id="@+id/three_btn"
                style="@style/NumberButton"
                android:text="3" />

            <TextView
                android:id="@+id/plus_btn"
                style="@style/ActionButton"
                android:text="+" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/zero_btn"
                style="@style/NumberButton"
                android:text="0" />

            <TextView
                android:id="@+id/dot_btn"
                style="@style/NumberButton"
                android:text="." />

            <TextView
                android:id="@+id/del_btn"
                style="@style/NumberButton"
                android:text="DEL" />

            <TextView
                android:id="@+id/equals_btn"
                style="@style/ActionButton"
                android:text="=" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>